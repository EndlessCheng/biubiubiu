{
  "manifest_version": 2,

  "name": "Biubiubiu",
  "description": "一个简单的网页弹幕实现",
  "version": "1.0",

 "content_scripts": [
    {
      "matches": ["http://*/*"],
      "css": ["biubiubiu.css"],
      "js": ["jquery.min.js", "biubiubiu.js"]
    }
  ],

  "browser_action": {
    //"default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Biubiubiu",
    "web_accessible_resources": ["jquery.min.js"]
  },

  "background": {  
    "scripts": ["background.js"]  
  },

  "permissions": [
    "tabs", "http://*/*"
  ]
}
